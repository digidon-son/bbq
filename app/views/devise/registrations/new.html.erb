<div class="offset-md-4 offset-sm-3 col-sm-9">
  <h2>Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3 col-lg-4">
      <div>
        <%= f.label :email, 'Электронная почта', class: 'form-label', for: 'exampleInputEmail1' %>
      </div>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: 'form-control', id: 'exampleInputEmail1' %>
      </div>
      <div id="emailHelp" class="form-text">Мы никогда никому не передадим вашу электронную почту.</div>
    </div>

    <div class="field mb-3 col-lg-4">
      <div>
        <%= f.label :password, 'Пароль', class: 'form-label', for: 'exampleInputPassword1' %>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "new-password",
                             class: 'form-control', id: 'exampleInputPassword1' %>
      </div>
      <% if @minimum_password_length %>
        <div id="passwordHelpBlock" class="form-text">Минимальдная длинна пароля <%= @minimum_password_length %>
          символов
        </div>
      <% end %>
    </div>

    <div class="field mb-3 col-lg-4">
      <div>
        <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'form-label', for: 'InputPassword2' %>
      </div>
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: 'form-control', id: 'InputPassword2' %>
      </div>
    </div>

      <%= f.submit "Зарегестрироваться", class: 'btn btn-success' %>
  <% end %>
   <%= link_to 'Войти', new_user_session_path, class: 'btn btn-primary mt-2' %>
</div>
