<div class="col-5">
  <h2><%= t('devise.password.change_new_password') %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
                   html: { method: :put }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :password, t('devise.password.new_password'), class: 'form-label' %><br />
      <% if @minimum_password_length %>
        <em>(<%= "#{@minimum_password_length} #{t('devise.password.characters_minimum')}"%> )</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="field mt-3">
      <%= f.label :password_confirmation, t('devise.password.confirm_new_password'), class: 'form-label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit t('devise.password.change_my_password'), class: 'btn btn-success mt-3' %>
    </div>
  <% end %>
  <div class="mt-1">
    <%= link_to 'Войти', new_user_session_path, class: 'btn btn-primary' %>
    <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'btn btn-primary' %>
  </div>
</div>
