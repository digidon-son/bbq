<%= render 'devise/shared/error_messages' %>

<div class="offset-md-4 offset-sm-3 col-sm-9">
  <h2>Забыли пароль?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="field mb-3 col-lg-5">
      <div><%= f.label :email, 'Электронная почта', class: 'form-label', for: 'forgotterInputEmail' %></div>
      <div><%= f.email_field :email, autofocus: true, autocomplete: "email",
                             class: 'form-control', id: 'forgotterInputEmail' %></div>
    </div>

    <div class="actions">
      <%= f.submit "Пришлите мне инструкцию по сбросу пароля", class: 'btn btn-success' %>
    </div>
  <% end %>
  <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'btn btn-primary mt-2' %>
  <%= link_to 'Войти', new_user_session_path, class: 'btn btn-primary mt-2' %>
</div>